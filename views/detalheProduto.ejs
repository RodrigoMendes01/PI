      <p class="nome">NOME PRODUTO</p>
      <p>R$1,49</p>
      <button class="botao1">Adicione ao carrinho</button>
    </section>
    <section class="produto">
      <img src="/images/img-comprar/detergente.jpeg" width="60%" height="127vh">
      <p class="nome">NOME PRODUTO</p>
      <p>R$1,89</p>
      <button class="botao1">Adicione ao carrinho</button>
    </section>
    <section class="produto">
      <img src="/images/img-comprar/vejacozinha.jpeg" width="60%" height="127vh">
